<% include ../header %>
<header class="row-fluid text-center">
  <h2>Ntalk - Agenda de contatos</h2>
</header>

<section class="row-fluid">
  <form class="well form-inline text-center" action="/contato" method="POST">
    <input name="contato[nome]" type="text" placeholder="Nome">
    <input name="contato[email]" type="text" placeholder="E-mail">
    <button class="btn btn-primary" type="submit">Cadastrar</button>
  </form>

  <table class="table well">
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <% contatos.forEach(function(contato, index) { %>
        <tr>
          <td><%- contato.nome %></td>
          <td><%- contato.email %></td>
          <td>
            <a href="/contato/<%- index %>">Detalhes</a>
            <a href="/chat">Conversar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
<% include ../exit %>
<% include ../footer %>
